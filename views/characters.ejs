<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div id="main">
      <div id="app">
        <h1><%= title %></h1>
        <div id="characters">
          <% characters.forEach((character, idx) => { %>
            <div 
              class="char-info"
              id="<%= idx+1 %>"
              style="border-color: <%= character.colors ? character.colors[0] : white %>;"
            >
              <img src="<%= character.image %>" alt="<%= character.name %>">
              <br>
              Name: <%= character.name %>
              <br>
              Species: <%= character.species %>
              <br>
              <% character.colors.forEach((color, idx) => { %>
                Color<%= idx+1 %>: <%= color %>
                <br>
              <% }) %>
            </div>
          <% }); %>
        </div>
        <a href="/">Back</a>
      </div>
    </div>
  </body>
</html>